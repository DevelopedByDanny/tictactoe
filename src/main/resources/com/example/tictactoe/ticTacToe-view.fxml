<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tictactoe.TicTacToeController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label alignment="TOP_CENTER" fx:id="welcomeLabel"/>
    <Label alignment="CENTER" fx:id="turnLabel"/>
    <Button text="Start" onAction="#onClickStartGame"/>
    <GridPane alignment="CENTER">
        <Button fx:id="button00" onAction="#onButtonAction" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Button fx:id="button01" onAction="#onButtonAction" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Button fx:id="button02" onAction="#onButtonAction" GridPane.rowIndex="0" GridPane.columnIndex="2" />
        <Button fx:id="button10" onAction="#onButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Button fx:id="button11" onAction="#onButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Button fx:id="button12" onAction="#onButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="2" />
        <Button fx:id="button20" onAction="#onButtonAction" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Button fx:id="button21" onAction="#onButtonAction" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Button fx:id="button22" onAction="#onButtonAction" GridPane.rowIndex="2" GridPane.columnIndex="2" />
    </GridPane>
    <Label fx:id="winner" />
</VBox>