<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tictactoe.TicTacToeController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label alignment="TOP_CENTER" fx:id="welcomeLabel"/>
    <Label alignment="CENTER" fx:id="turnLabel"/>
    <Button text="Start" onAction="#onClickStartGame"/>

    <HBox alignment="CENTER">
        <VBox>
            <Button fx:id="button00" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
            <Button fx:id="button01" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
            <Button fx:id="button02" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
        </VBox>
        <VBox>
            <Button fx:id="button10" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
            <Button fx:id="button11" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
            <Button fx:id="button12" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
        </VBox>
        <VBox>
            <Button fx:id="button20" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
            <Button fx:id="button21" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
            <Button fx:id="button22" onAction="#onButtonAction" minHeight="50" minWidth="50"/>
        </VBox>
    </HBox>
    <Label fx:id="winner" />
</VBox>